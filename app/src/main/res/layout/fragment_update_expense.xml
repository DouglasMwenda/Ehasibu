<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".expenses.updateExpenseFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Add Expense"
        android:textColor="#800000"
        android:textSize="18sp"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/expenseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corner"
                android:inputType="none"
                android:padding="16dp"
                android:paddingEnd="12dp"
                android:text="Expense Type"
                android:textColor="#800000"
                android:textColorHint="#800000"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/budgetType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corner"
                android:inputType="none"
                android:padding="16dp"
                android:paddingEnd="12dp"
                android:text="Budget Type"
                android:textColor="#800000"
                android:textColorHint="#800000"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corner"
                android:inputType="none"
                android:padding="16dp"
                android:text="Category"
                android:textColor="#800000"
                android:textColorHint="#800000"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="number"
            android:text="Amount Spent"
            android:textColor="#800000"
            android:textSize="16sp"
            android:textColorHint="#800000"
            android:background="@drawable/rounded_corner"
            android:layout_margin="16dp"
            android:inputType="none"
            android:padding="16dp"
            android:paddingEnd="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="start"
                android:backgroundTint="#800000"
                android:text="Submit"
                android:id="@+id/submitbudgetbutton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deletebudgetButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:textColor="#800000"
                android:layout_margin="5dp"
                app:strokeColor="#800000"
                android:backgroundTint="@color/white" />


        </LinearLayout>
    </LinearLayout>


</FrameLayout>
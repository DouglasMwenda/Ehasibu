<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".budget.addBudgetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/update_budget" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/expenseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_corner"
                android:inputType="none"
                android:padding="16dp"
                android:text="@string/budget_type"
                android:textColor="#800000"
                android:textColorHint="#800000"
                android:textSize="16sp"
                android:visibility="visible"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:autofillHints="number"
                android:background="@drawable/rounded_corner"
                android:inputType="none"
                android:padding="16dp"
                android:text="Description"
                android:textColor="#800000"
                android:textColorHint="#800000"
                android:textSize="16sp"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:autofillHints="number"
                android:background="@drawable/rounded_corner"
                android:inputType="none"
                android:padding="16dp"
                android:text="@string/amount_budgeted"
                android:textColor="#800000"
                android:textColorHint="#800000"
                android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#800000"
                android:text="Submit"
                android:id="@+id/submitbudgetbutton"
                />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/printquoteButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:text="Delete"
                android:textColor="#800000"
                app:strokeColor="#800000" />
        </LinearLayout>




    </LinearLayout>

</FrameLayout>
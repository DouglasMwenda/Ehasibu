<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/password_reset_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.forgot_password.PassReset">


    <TextView
        android:id="@+id/reset_text"
        android:layout_width="304dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:text="@string/reset_password"
        android:textAlignment="center"
        android:textColor="#800000"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/current_pass_input"
        android:layout_width="266dp"
        android:layout_height="52dp"
        android:layout_marginBottom="428dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/current_password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#800000"
        android:textColorHint="#800000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reset_text"
        app:layout_constraintVertical_bias="0.562" />

    <EditText
        android:id="@+id/new_pass_input"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#800000"
        android:textColorHint="#800000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_pass_input"
        app:layout_constraintVertical_bias="0.087" />


    <EditText
        android:id="@+id/confirm_pass_input"
        android:layout_width="274dp"
        android:layout_height="53dp"
        android:background="@drawable/rounded_corner"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textColor="#800000"
        android:textColorHint="#800000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_pass_input"
        app:layout_constraintVertical_bias="0.142"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/pass_reset_btn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#800000"
        android:padding="8dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_pass_input"
        app:layout_constraintVertical_bias="0.15"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>



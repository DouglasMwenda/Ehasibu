<?xml version="1.0" encoding="utf-8"?>
<!--<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:textSize="24sp"
            android:textColor="#800000"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/business_name"
            android:textColor="#800000"
            android:textSize="16sp"
            android:textColorHint="#800000"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:inputType="text"
            android:layout_margin="16dp"
            android:id="@+id/business_name_input"
            tools:ignore="MissingConstraints" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_name"
            android:textColor="#800000"
            android:textSize="16sp"
            android:textColorHint="#800000"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:inputType="textPersonName"
            android:layout_margin="16dp"
            android:id="@+id/first_name_input"
            tools:ignore="MissingConstraints" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/last_name"

            android:textColor="#800000"
            android:textSize="16sp"
            android:textColorHint="#800000"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:inputType="textPersonName"
            android:layout_margin="16dp"
            android:id="@+id/last_name_iput"
            tools:ignore="MissingConstraints" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/other_names"
            android:textColor="#800000"
            android:textSize="16sp"
            android:textColorHint="#800000"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:inputType="textPersonName"
            android:layout_margin="16dp"
            android:id="@+id/other_names_input"
            tools:ignore="MissingConstraints,TextFields" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/email_24"
            android:hint="email address"
            android:textColor="#800000"
            android:textSize="16sp"
            android:textColorHint="#800000"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:inputType="textEmailAddress"
            android:layout_margin="16dp"
            android:id="@+id/email_input"
            tools:ignore="MissingConstraints,TextFields" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_corner"
            android:hint="@string/password"
            android:drawableEnd="@drawable/lock_password"

            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="#800000"
            android:textColorHint="#800000"
            android:textSize="16sp"
            tools:ignore="MissingConstraints,TextFields"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="338dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/email_24"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:textColor="#800000"
            android:textSize="16sp"
            android:textColorHint="#800000"
            android:background="@drawable/rounded_corner"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:id="@+id/confirm_password_input"
            tools:ignore="MissingConstraints" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:orientation="horizontal"
            android:layout_margin="16dp"

            >

            <CheckBox
                android:id="@+id/remember_me_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"/>


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="@string/i_agree_to_the_terms_of_servive_and_privacy_policy"
                android:padding="8dp"
                android:textColor="#800000"
                android:textSize="12sp" />


        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:backgroundTint="#800000"
            android:padding="8dp"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:id="@+id/register_btn"/>
    </LinearLayout>



</RelativeLayout>

    <!--</androidx.constraintlayout.widget.ConstraintLayout>-->

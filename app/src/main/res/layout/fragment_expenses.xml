<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/expenses"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Expenses"
            android:textColor="#800000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <com.google.android.material.card.MaterialCardView
           style="@style/displayCards"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Operating Expenses"
                android:textSize="12sp"
                android:textColor="#800000"
                android:textStyle="bold"
                android:gravity="top|center"
                android:layout_gravity="top|center"
                tools:ignore="HardcodedText" />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            style="@style/displayCards"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Non-Operating Expenses"
                android:textSize="12sp"
                android:textColor="#800000"
                android:textStyle="bold"
                android:gravity="top|center"
                android:layout_gravity="top|center"
                tools:ignore="HardcodedText" />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            style="@style/displayCards"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expenses"
                android:textSize="12sp"
                android:textColor="#800000"
                android:textStyle="bold"
                android:gravity="top|center"
                android:layout_gravity="top|center"
                tools:ignore="HardcodedText" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#800000"
                android:text="Add Expenses"
                android:id="@+id/addexpensebutton"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/pdf"
                android:onClick="downloadPdf"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#800000"
                android:layout_marginStart="10dp"
                android:text="Report"
                android:id="@+id/budgetsbutton"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fillViewport="false">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/expensestable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#800000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/no"
                    android:padding="8dp"
                    android:textColor="@color/white"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/budget_type"
                    android:padding="8dp"

                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="@string/date"
                    android:padding="8dp"

                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/amount"
                    android:padding="8dp"

                    android:textColor="@color/white"
                     />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:text="@string/expense_category"
                    android:padding="8dp"

                    android:textColor="@color/white"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/mode_of_payment"
                    android:padding="8dp"

                    android:textColor="@color/white"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/status"
                    android:padding="8dp"

                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/expense_type"
                    android:padding="8dp"

                    android:textColor="@color/white"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/action"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                  />


            </TableRow>
        </TableLayout>
            </ScrollView>
        </HorizontalScrollView>
    </FrameLayout>

    </LinearLayout>